{
    "name": "xiscodev/racl",
    "description": "Opinionated RESTful API client for Laravel or Lumen",
    "keywords": [
        "xiscodev",
        "laravel",
        "restful",
        "client",
        "racl"
    ],
    "homepage": "https://github.com/xiscodev/racl",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Diaz",
            "email": "contact@xisco.dev",
            "homepage": "https://xisco.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Xiscodev\\Racl\\": "src"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xiscodev\\Racl\\RaclServiceProvider"
            ],
            "aliases": {
                "Racl": "Xiscodev\\Racl\\RaclFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
