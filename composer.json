{
    "name": "xiscodev/racl",
    "description": "Opinionated RESTful API client for Laravel or Lumen",
    "keywords": [
        "xiscodev",
        "laravel",
        "restful",
        "client",
        "racl"
    ],
    "homepage": "https://github.com/xiscodev/racl",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jose Diaz",
            "email": "contact@xisco.dev",
            "homepage": "https://xisco.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3",
        "illuminate/support": "^8.0",
        "illuminate/http": "^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.7",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Xiscodev\\Racl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xiscodev\\Racl\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xiscodev\\Racl\\RaclServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
