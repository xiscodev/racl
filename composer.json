{
    "name": "xiscodev/racl",
    "description": "Opinionated RESTful API client for Laravel or Lumen",
    "keywords": [
        "xiscodev",
        "laravel",
        "restful",
        "client",
        "racl"
    ],
    "homepage": "https://github.com/xiscodev/racl",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jose Diaz",
            "email": "contact@xisco.dev",
            "homepage": "https://xisco.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3",
        "illuminate/http": "^v6.20.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Xiscodev\\Racl\\Requester\\": "src/Requester/",
            "Xiscodev\\Racl\\Responser\\": "src/Responser/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xiscodev\\Racl\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
